<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal">
        <ImageView
                android:id="@+id/CalendarOnboardingImage"
                android:layout_width="104dp"
                android:layout_height="71dp"
                android:src="@drawable/calendar_onboarding"/>
        <TextView
                android:id="@+id/CalendarOnboardingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/primaryText"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="4sp"
                tools:text="Get started with Calendar" />
        <TextView
                android:id="@+id/CalendarOnboardingMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:gravity="center_horizontal"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/secondaryText"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="4sp"
                tools:text="View your calendar events in Toggl and turn them into time entries with a tap" />
        <Button
                android:id="@+id/CalendarOnboardingGetStartedButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="24dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:background="@drawable/RaisedButton"
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp"
                android:bottomLeftRadius="4dp"
                android:bottomRightRadius="4dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="@color/RaisedButtonTextColor"
                android:textAllCaps="false"
                tools:text="Link your calendars" />
        <TextView
                android:id="@+id/CalendarOnboardingSkipButton"
                android:gravity="center"
                android:layout_width="56dp"
                android:layout_height="36dp"
                android:layout_marginTop="16dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="@color/flatButtonText"
                android:letterSpacing="0.04"
                android:lineSpacingExtra="2sp"
                tools:text="Skip" />
    </LinearLayout>
</RelativeLayout>
