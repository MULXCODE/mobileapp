<?xml version="1.0" encoding="UTF-8" ?>
<resources>
  <style name="Theme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:windowLightNavigationBar">true</item>
    <item name="android:windowBackground">@drawable/Splash</item>
    <item name="android:statusBarColor">@color/lightGray</item>
    <item name="android:navigationBarColor">@color/lightGray</item>
  </style>

  <style name="AppTheme.Light">
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:windowLightNavigationBar">true</item>
    <item name="android:statusBarColor">@color/lightGray</item>
    <item name="android:navigationBarColor">@android:color/white</item>
  </style>

  <style name="AppTheme.Light.WhiteBackground">
    <item name="android:windowLightStatusBar">true</item>
    <item name="android:windowLightNavigationBar">true</item>
    <item name="android:statusBarColor">@android:color/white</item>
    <item name="android:windowBackground">@android:color/white</item>
    <item name="android:navigationBarColor">@android:color/white</item>
    <item name="colorControlActivated">@color/defaultEditText</item>
  </style>
</resources>
